@{
    ViewData["Title"] = "JSON Parser";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ParseJson" method="post">
    <div class="form-group">
        <label for="jsonInput">JSON Input:</label>
        <textarea id="jsonInput" name="json" class="form-control" rows="10" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Parse JSON</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@if (ViewBag.Result != null)
{
    <h3>Parsed JSON Content:</h3>
    <pre>@ViewBag.Result</pre>
}
