@{
    ViewData["Title"] = "DNS Request";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="PerformDnsRequest" method="post">
    <div class="form-group">
        <label for="userStrInput">FQDN:</label>
        <input type="text" id="userStrInput" name="userStr" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="tokenInput">Token:</label>
        <input type="text" id="tokenInput" name="token" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="secretInput">Secret:</label>
        <input type="text" id="secretInput" name="secret" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Perform DNS Request</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@if (ViewBag.Result != null)
{
    <h3>DNS Request Result:</h3>
    <pre>@ViewBag.Result</pre>
}
