@{
    ViewData["Title"] = "Get File Content";
}

<h2>@ViewData["Title"]</h2>

<form method="get" action="/HelloWorld/GetFileContent">
    <label for="fileName">File Name:</label>
    <input type="text" id="fileName" name="fileName" value="english" />
    <button type="submit">Get Content</button>
</form>

@if (ViewBag.Content != null)
{
    <pre>@ViewBag.Content</pre>
}
